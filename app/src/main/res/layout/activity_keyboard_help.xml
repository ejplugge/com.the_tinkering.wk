<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackground"
    tools:context=".activities.KeyboardHelpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/toolbarColorBackground"
        android:theme="@style/WKToolbarTheme"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        tools:ignore="UnusedAttribute"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/document_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                style="@style/WK.TextView.Normal"/>

            <Button
                android:id="@+id/keyboardSettingsButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Keyboard settings"
                style="@style/WK.Button.Normal"/>

            <TextView
                android:id="@+id/document_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                style="@style/WK.TextView.Normal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/doItButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do it"
                    style="@style/WK.Button.Normal"/>

                <Button
                    android:id="@+id/keyboardSettingsButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyboard settings"
                    style="@style/WK.Button.Normal"/>

            </LinearLayout>

            <TextView
                android:id="@+id/document_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                style="@style/WK.TextView.Normal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/doItButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do it"
                    style="@style/WK.Button.Normal"/>

                <Button
                    android:id="@+id/keyboardSettingsButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyboard settings"
                    style="@style/WK.Button.Normal"/>

            </LinearLayout>

            <TextView
                android:id="@+id/document_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                style="@style/WK.TextView.Normal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/doItButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do it"
                    style="@style/WK.Button.Normal"/>

                <Button
                    android:id="@+id/keyboardSettingsButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyboard settings"
                    style="@style/WK.Button.Normal"/>

            </LinearLayout>

            <TextView
                android:id="@+id/document_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                style="@style/WK.TextView.Normal"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/doItButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do it"
                    style="@style/WK.Button.Normal"/>

                <Button
                    android:id="@+id/keyboardSettingsButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Keyboard settings"
                    style="@style/WK.Button.Normal"/>

            </LinearLayout>

            <TextView
                android:id="@+id/document_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                style="@style/WK.TextView.Normal"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
