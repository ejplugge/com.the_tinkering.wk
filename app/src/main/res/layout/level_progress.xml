<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:gravity="center_horizontal"
            android:text="Level progression"
            android:padding="2dp"
            style="@style/WK.TextView.Normal.Bold"/>

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/legendBucket0"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Passed"
            style="@style/WK.TextView.XSmall"/>

        <View
            android:id="@+id/legendBucket1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="center_vertical"/>

        <View
            android:id="@+id/legendBucket2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"/>

        <View
            android:id="@+id/legendBucket3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"/>

        <View
            android:id="@+id/legendBucket4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"/>

        <View
            android:id="@+id/legendBucket5"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"/>

        <View
            android:id="@+id/legendBucket6"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"/>

        <View
            android:id="@+id/legendBucket7"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Apprentice"
            style="@style/WK.TextView.XSmall"/>

        <View
            android:id="@+id/legendBucket8"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Initiate"
            style="@style/WK.TextView.XSmall"/>

        <View
            android:id="@+id/legendBucket9"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Locked"
            style="@style/WK.TextView.XSmall"/>

    </LinearLayout>

</merge>
